@{
}

@foreach (var item in Model)
{
    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <h1 class="my-4">
            Page Heading
            <small>Secondary Text</small>
        </h1>

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-4">
                <h3 class="my-3">@item.Title</h3>
                <p>@item.Description</p>
                <h3 class="my-3">Location</h3>
                <ul>
                    <li>@item.Address.City</li>
                    <li>@item.Address.State</li>
                    <li>@item.RaceCategory</li>
                </ul>
            </div>

        </div>
        <!-- /.row -->

    </div>

}
